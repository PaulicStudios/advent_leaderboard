<% content_for :title do @year.number end %>

<div class="row gx-4 gy-4 mt-4">
  <div class="col-12">
    <% if @today %>
      <%= render @today %>
    <% else %>
      <p class="text-center text-secondary">
        This event is not active right now.
      </p>
    <% end %>
  </div>
</div>

<div class="row gx-4 gy-4 mt-4">
  <div class="col-12 col-lg-7 col-xl-8">
    <%= render 'years/scoreboard' %>
  </div>

  <div class="col-12 col-lg-5 col-xl-4">
    <%= render 'years/days_overview' %>
  </div>
</div>
